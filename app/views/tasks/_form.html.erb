<div class="container">
  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
      <% unless f.object.new_record?%>
      <%= f.check_box :completed %>
    <%end%>
    <%= f.submit %>
  <% end %>
  <p><%= link_to "return", tasks_path %></p>
</div>